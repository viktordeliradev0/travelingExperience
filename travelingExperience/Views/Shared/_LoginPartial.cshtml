@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> singInManager
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
@if (singInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="User">
        <ul class="nav navbar-nav">

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hello, @User.Identity.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Profile" asp-controller="User">Profile</a>
                    <a class="dropdown-item" asp-action="UserTravels" asp-controller="User">My Travels</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-black" href="javascript:document.getElementById('logoutForm').submit()">Log off </a>
                </div>
            </li>
            <li></li>
           
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="User">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="User">Login</a>
        </li>
    </ul>
}

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
