@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> singInManager
@if(singInManager.IsSignedIn(User)){
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="User">
        <ul class="nav navbar-nav">
            <li class="text-black nav-link">Hello,@User.Identity.Name</li>
            <li ><a class="text-black" href="java">Logoff </a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class ="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="User">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="User">Login</a>
        </li>
    </ul>
}