@model List<travelingExperience.Entity.Travel>

@{
    ViewData["Title"] = "My Travels";
}

<h1>My Travels</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Start Destination</th>
                <th>End Destination</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Price</th>
                <th>Seats</th>
                <!-- Add other columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var travel in Model)
            {
                <tr>
                    <td>@travel.StartDestination</td>
                    <td>@travel.EndDestination</td>
                    <td>@travel.Descrition</td>
                    <td>@travel.StartDate</td>
                    <td>@travel.EndDate</td>
                    <td>@travel.Price</td>
                    <td>@travel.Seats</td>
                        <td><a class="btn btn-outline-info" asp-action="Edit" asp-controller="Travel" asp-route-id="@travel.Id">Edit</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-controller="Travel" asp-route-id="@travel.Id">Details</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Travel" asp-route-id="@travel.Id">Delete</a></td>
                    <!-- Add other columns as needed -->
                   
                </tr>
                
            }
        </tbody>
    </table>
}
else
{
    <p>No travels found.</p>
}
